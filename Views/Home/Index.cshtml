@{
    ViewData["Title"] = "Home Page";
}
<div class="container m-3">
    <div class="row">
        <div class="col-12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-75" src="~/lib/img/book1.jpg" alt="Первый слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-75" src="~/lib/img/book3.jpg" alt="Второй слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-75" src="~/lib/img/book2.jpg" alt="Третий слайд">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-22">
                <ul class="list-unstyled">
                    <li class="media">
                        <img class="mr-3 rounded-circle" src="~/files/planetSat.png" alt="planet" />
                        <div class="media-body">
                            <h5 class="mt-0 mb-1">LibraryCS</h5>
                            <p class="mb-0">Добро пожаловать в библиотеку LibraryCS</p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6 col-22">
                <ul class="list-unstyled">
                    <li class="media">
                        <img class="mr-3 rounded-circle" src="~/files/spaceShip.png" alt="ship" />
                        <div class="media-body">
                            <h5 class="mt-0 mb-1">Fast start</h5>
                            <p class="mb-0">Add Entities to BD for test app</p>
                            <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="InitialBase">AddTestItem</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6 col-22">
                <ul class="list-unstyled">
                    <li class="media">
                        <img class="mr-3 rounded-circle" src="~/files/1.png" alt="gitplanet" />
                        <div class="media-body">
                            <h5 class="mt-0 mb-1">Download it</h5>
                            <p class="mb-0">You can download the completed project from GitHub.</p>
                            <p><a class="btn btn-default" href="https://github.com/Alexey-ai/LibraryCS">See project source code &raquo;</a></p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
