@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron">
    <h3>CS Library</h3>
</div>
<div class="row">
    <div class="col-md-5">
        <h2>Добро пожаловать в библиотеку CS!</h2>
    </div>
    <div class="col-md-5">
        <h3>Download it</h3>
        <p>You can download the completed project from GitHub.</p>
        <p><a class="btn btn-default" href="https://github.com/Alexey-ai/LibraryCS">See project source code &raquo;</a></p>
    </div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/lib/img/book1.jpg"  alt ="Первый слайд">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/img/book2.jpg" alt="Второй слайд">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/img/book3.jpg" alt="Третий слайд">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>