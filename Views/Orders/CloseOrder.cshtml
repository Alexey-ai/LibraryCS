@model LibraryCS.Models.Order

@{
    ViewData["Title"] = "Close Order";
}

<h1>Close</h1>
<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CloseOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <input type="hidden" asp-for="BookID" />
            <input type="hidden" asp-for="ReaderID" />
            <input type="hidden" asp-for="OrderDate" />

            <div class="align-content-sm-start">
                <a> @Html.DisplayFor(model => model.Book.FullName)</a>
            </div>
            <div class="align-content-sm-start">
                <a> @Html.DisplayFor(model => model.Reader.FullName)</a>
            </div>
            <div class="control-label">
                <a> @Html.DisplayFor(model => model.OrderDate)</a>
            </div>
            <div class="form-group">
                <label asp-for="OrderReturnDate" class="control-label"></label>
                <input asp-for="OrderReturnDate" class="form-control" />
                <span asp-validation-for="OrderReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
