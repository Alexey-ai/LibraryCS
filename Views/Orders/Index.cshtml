@model IEnumerable<LibraryCS.Models.Order>


@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>
<p>
    @if (User.HasClaim("IsAdmin", bool.TrueString))
    {
        <a asp-action="Create">Create New Order</a>
    }

</p>
<p>
    @if (User.HasClaim("IsAdmin", bool.TrueString))
    {
        <a asp-action="CloseOrderList">Close Order</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader.ReaderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader.ReaderLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.NameBook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reader.ReaderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reader.ReaderLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderReturnDate)
            </td>
            <td>
                @if (User.HasClaim("IsAdmin", bool.TrueString))
                {
                    <a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.OrderID">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
