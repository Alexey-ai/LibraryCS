@model LibraryCS.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Детальная информация</h1>
<h2>@Html.DisplayFor(item => item.FullName)</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameBook)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameBook)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Edition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aviability)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aviability)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookAddDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookAddDate)
        </dd>
    </dl>
</div>
<p><img src="@Url.Content(Model.BookPicturesPath)"></p>

<form asp-action="AddFileToBook" asp-route-id="@Model.BookID" asp-controller="Pictures" method="post" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <input type="submit" value="Change" />
</form>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-danger">Изменить</a> |
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</div>
